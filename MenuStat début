#include <stdio.h>
#include <stdlib.h>

int afficheMenu(void)
{
  int ChoixMenu;

  printf("------MENU------\n\n");
  printf("1.STATIQUE\n");
  printf("2.DYNAMIQUE\n");
  printf("3.INTERACTIF\n\n");
  printf("Faites votre choix\n");
  scanf("%d" , &ChoixMenu);
  return ChoixMenu;
}
int main(void)
{
  switch(afficheMenu())
  {
    case 1:
          printf("Voici les statistiques pour l'ecran statique\n");
          break;
    case 2:
          printf("Voici les statistiques pour l'ecran dynamique\n");
          break;
    case 3:
          printf("Voici les statistiques pour l'ecran interactif\n");
          break;
  }
  return 0;
}
