int randomImage()
{
choisir un chiffre entre x et y;
return chiffre;
}
void historique statique(int randomImage)
{
ouvre le fichier d'historique ecrit
dedans : le nom du fichier image et le temps
}
void ouverture, lecture et insertion(int numero fichier, table²) // table² = tableau à double entrée
{
ouvre le fichier PBM
lit le fichier
insertion des valeurs dans une table à double entrée
}

void placement(int numero fichier, table², tableau d'affichage)
{
insert les données du table² dans le tableau d'affichage à partir d'une case spécifique
}

void affichage(tableau d'affichage)
{
affiche les données du tableau d'affichage dans le terminal
}

void sortie statique
{
Si l'utilisateur touche une touche alors kill processus père (lanceur)
return au shell
}
